<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="277dp">

    <RelativeLayout
        android:id="@+id/relativelayout_display_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/textview_date"
            android:text="Dec"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_month"
            android:text="/"
            android:visibility="gone"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/textview_month"
            android:text="2000"
            android:textColor="#666666"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativelayout_display_date"
        android:layout_margin="8dp"
        android:background="#eeeeee">

    </View>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:id="@+id/relativelayout_date"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="@color/colorBlue">

            </View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="80dp"
                android:background="@color/colorBlue">

            </View>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_date"
                android:layout_width="64dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativelayout_month"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/relativelayout_date">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="@color/colorBlue">

            </View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="80dp"
                android:background="@color/colorBlue">

            </View>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_month"
                android:layout_width="64dp"
                android:layout_height="120dp">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_year"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/relativelayout_month">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="@color/colorBlue">

            </View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="80dp"
                android:background="@color/colorBlue">

            </View>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_year"
                android:layout_width="64dp"
                android:layout_height="120dp">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button_done"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:text="cancel"
        android:textColor="@color/colorBlue" />

    <Button
        android:id="@+id/button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:text="done"
        android:textColor="@color/colorBlue"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>